<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%style{%d{HH:mm:ss}}{grey} %style{[SERVER]}{cyan} %msg%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingRandomAccessFile name="FileAppender" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd-HH}{GMT}-%i.log.gz">
			<PatternLayout>
                <Pattern>%d{HH:mm:ss} [SERVER] %msg%n</Pattern>
            </PatternLayout>
				<Policies>
					<TimeBasedTriggeringPolicy />
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
